<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

  <?define ProductVersion=$(var.Version) ?>
  <?define ProductBuild=!(bind.fileVersion.app.exe) ?>
  <?define ProductManufacturer = "SQLBI" ?>
  <?define AppUrlInfoAbout = "https://github.com/sql-bi/bravo" ?>
  <?define AppInstallFolder = "SQLBI" ?>
  <?define AppInstallSubfolder = "Bravo" ?>
  <?define AppExecutableName = "Bravo.exe" ?>
  <?define AppName = "Bravo" ?>
  <?define InstallScope = "perUser" ?>

  <?if $(sys.BUILDARCH) = x64 ?>
    <?define ProductName = "!(loc.ProductName) (User)" ?>
    <?define Win64 = "yes" ?>
  <?else ?>
    <?define ProductName = "!(loc.ProductName) (User/32bit)" ?>
    <?define Win64 = "no" ?>
  <?endif ?>
  
  <Product Id="*" Name="$(var.ProductName)" Language="!(loc.ProductLanguage)" Version="$(var.ProductBuild)" Manufacturer="$(var.ProductManufacturer)" UpgradeCode="{888BDB48-B16A-4D9A-8FE6-0206897B1162}">

    <!-- Package/@InstallerVersion upgraded to 301 from 200 in order to match the merged VCRedist MSVC merge module version -->
    <Package InstallerVersion="301" Compressed="yes" InstallScope="$(var.InstallScope)" Manufacturer="$(var.ProductManufacturer)" Description="!(loc.PackageDescription)" Comments="!(loc.PackageComments)"  />
    <Binary Id="CustomActionBinary" SourceFile="..\assets\Bravo.Installer.Wix.CA.dll" />
    <MajorUpgrade AllowSameVersionUpgrades="yes" AllowDowngrades="no" DowngradeErrorMessage="!(loc.MajorUpgradeDowngradeErrorMessage)" Schedule="afterInstallValidate" />
    <MediaTemplate EmbedCab="yes" CompressionLevel="high" />
    
    <Feature Id="Complete" Title="$(var.ProductName)" Level="1">
      <ComponentRef Id="app.exe" />
      <ComponentRef Id="DesktopShortcut" />
      <ComponentRef Id="ProgramMenuShortcut" />
      <ComponentGroupRef Id="ComponentsAutogenerated" />
      <ComponentGroupRef Id="VCRedistAutogenerated" />
    </Feature>
    
    <Condition Message="!(loc.SupportedWindowsVersionConditionMessage)">
      <![CDATA[(WINDOWSBUILDNUMBER >= 17763)]]>
    </Condition>

    <Icon Id="app.ico" SourceFile="$(var.PublishFolder)\$(var.AppExecutableName)" />
    <UI>
      <UIRef Id="Custom_WixUI_InstallDir" />
      <UIRef Id="WixUI_ErrorProgressText" />
      <Publish Dialog="ExitDialog" Control="Finish" Event="DoAction" Value="LaunchApplication">WIXUI_EXITDIALOGOPTIONALCHECKBOX = 1 and NOT Installed</Publish>
    </UI>
    <WixVariable Id="WixUIDialogBmp" Value="..\assets\background.png" />
    <WixVariable Id="WixUIBannerBmp" Value="..\assets\banner.png" />
    <WixVariable Id="WixUILicenseRtf" Value="..\assets\license.rtf" />

    <Property Id="WixShellExecTarget" Value="[#app.exe]" />
    <!-- Setting ALLUSERS MSIINSTALLPERUSER configures the installer to a "per user" install, which is UAC friendly and does not need elevated permissions https://docs.microsoft.com/en-us/windows/win32/msi/allusers -->
    <Property Id="ALLUSERS" Value="2"/>
    <Property Id="MSIINSTALLPERUSER" Value="1" />
    <Property Id="ARPNOREPAIR" Value="yes" />
    <Property Id="ARPPRODUCTICON">app.ico</Property>
    <Property Id="ARPURLINFOABOUT">$(var.AppUrlInfoAbout)</Property>
    <Property Id="WIXUI_INSTALLDIR" Value="INSTALLFOLDER" />
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOX" Value="1" />
    <Property Id="WIXUI_EXITDIALOGOPTIONALCHECKBOXTEXT" Value="Launch $(var.ProductName)" />
    <Property Id="DESKTOPSHORTCUTENABLED" Secure="yes" />
    <Property Id="PROGRAMMENUSHORTCUTENABLED" Secure="yes" />
    <Property Id="INSTALLERTELEMETRYENABLED" Secure="yes" />
    <Property Id="APPLICATIONTELEMETRYENABLED" Secure="yes" />
    <Property Id="TELEMETRYUSERID" Secure="yes" />
    <Property Id="WINDOWSBUILDNUMBER" Secure="yes">
      <RegistrySearch Id="BuildNumberSearch" Root="HKLM" Key="SOFTWARE\Microsoft\Windows NT\CurrentVersion" Name="CurrentBuildNumber" Type="raw" />
    </Property>
    
    <!-- "remember" properties allow to retain the settings of a previous installation, if any -->
    <Property Id="DESKTOPSHORTCUTENABLEDREMEMBER">
      <RegistrySearch Id="searchDesktopShortcutEnabledRemember" Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="desktopShortcutEnabled" Type="raw" Win64="$(var.Win64)" />
    </Property>
    <Property Id="PROGRAMMENUSHORTCUTENABLEDREMEMBER">
      <RegistrySearch Id="searchProgramMenuShortcutEnabledRemember" Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="programMenuShortcutEnabled" Type="raw" Win64="$(var.Win64)" />
    </Property>
    <Property Id="INSTALLERTELEMETRYENABLEDREMEMBER">
      <RegistrySearch Id="searchInstallerTelemetryEnabledRemember" Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="installerTelemetryEnabled" Type="raw" Win64="$(var.Win64)" />
    </Property>
    <Property Id="APPLICATIONTELEMETRYENABLEDREMEMBER">
      <RegistrySearch Id="searchApplicationTelemetryEnabledRemember" Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="applicationTelemetryEnabled" Type="raw" Win64="$(var.Win64)" />
    </Property>
    
    <!-- Set 'remember' properties default value to '1' if the product is not installed or if their registry value is equal to '1' -->
    <SetProperty Action="DefaultDESKTOPSHORTCUTENABLEDREMEMBER" Id="DESKTOPSHORTCUTENABLEDREMEMBER" Value="1" After="AppSearch" Sequence="first"><![CDATA[NOT WIX_UPGRADE_DETECTED OR DESKTOPSHORTCUTENABLEDREMEMBER = "1"]]></SetProperty>
    <SetProperty Action="DefaultPROGRAMMENUSHORTCUTENABLEDREMEMBER" Id="PROGRAMMENUSHORTCUTENABLEDREMEMBER" Value="1" After="AppSearch" Sequence="first"><![CDATA[NOT WIX_UPGRADE_DETECTED OR PROGRAMMENUSHORTCUTENABLEDREMEMBER = "1"]]></SetProperty>
    <SetProperty Action="DefaultINSTALLERTELEMETRYENABLEDREMEMBER" Id="INSTALLERTELEMETRYENABLEDREMEMBER" Value="1" After="AppSearch" Sequence="first"><![CDATA[NOT WIX_UPGRADE_DETECTED OR INSTALLERTELEMETRYENABLEDREMEMBER = "1"]]></SetProperty>
    <SetProperty Action="DefaultAPPLICATIONTELEMETRYENABLEDREMEMBER" Id="APPLICATIONTELEMETRYENABLEDREMEMBER" Value="1" After="AppSearch" Sequence="first"><![CDATA[NOT WIX_UPGRADE_DETECTED OR APPLICATIONTELEMETRYENABLEDREMEMBER = "1"]]></SetProperty>

    <!-- Undefine "remember" properties if their value exists and is <> '1', this is because an undefined property will result to an unchecked WiX CheckBox -->
    <SetProperty Action="UndefineDESKTOPSHORTCUTENABLEDREMEMBER" Id="DESKTOPSHORTCUTENABLEDREMEMBER" Value="{}" After="AppSearch" Sequence="first"><![CDATA[DESKTOPSHORTCUTENABLEDREMEMBER AND DESKTOPSHORTCUTENABLEDREMEMBER <> "1"]]></SetProperty>
    <SetProperty Action="UndefinePROGRAMMENUSHORTCUTENABLEDREMEMBER" Id="PROGRAMMENUSHORTCUTENABLEDREMEMBER" Value="{}" After="AppSearch" Sequence="first"><![CDATA[PROGRAMMENUSHORTCUTENABLEDREMEMBER AND PROGRAMMENUSHORTCUTENABLEDREMEMBER <> "1"]]></SetProperty>
    <SetProperty Action="UndefineINSTALLERTELEMETRYENABLEDREMEMBER" Id="INSTALLERTELEMETRYENABLEDREMEMBER" Value="{}" After="AppSearch" Sequence="first"><![CDATA[INSTALLERTELEMETRYENABLEDREMEMBER AND INSTALLERTELEMETRYENABLEDREMEMBER <> "1"]]></SetProperty>
    <SetProperty Action="UndefineAPPLICATIONTELEMETRYENABLEDREMEMBER" Id="APPLICATIONTELEMETRYENABLEDREMEMBER" Value="{}" After="AppSearch" Sequence="first"><![CDATA[APPLICATIONTELEMETRYENABLEDREMEMBER AND APPLICATIONTELEMETRYENABLEDREMEMBER <> "1"]]></SetProperty>

    <!-- Overrides property value only if it has not been provided via the command line. Command line properties have a higher priority than registry settings. -->
    <SetProperty Action="OverrideDESKTOPSHORTCUTENABLED" Id="DESKTOPSHORTCUTENABLED" Value="[DESKTOPSHORTCUTENABLEDREMEMBER]" After="AppSearch" Sequence="first"><![CDATA[NOT DESKTOPSHORTCUTENABLED]]></SetProperty>
    <SetProperty Action="OverridePROGRAMMENUSHORTCUTENABLED" Id="PROGRAMMENUSHORTCUTENABLED" Value="[PROGRAMMENUSHORTCUTENABLEDREMEMBER]" After="AppSearch" Sequence="first"><![CDATA[NOT PROGRAMMENUSHORTCUTENABLED]]></SetProperty>
    <SetProperty Action="OverrideINSTALLERTELEMETRYENABLED" Id="INSTALLERTELEMETRYENABLED" Value="[INSTALLERTELEMETRYENABLEDREMEMBER]" After="AppSearch" Sequence="first"><![CDATA[NOT INSTALLERTELEMETRYENABLED]]></SetProperty>
    <SetProperty Action="OverrideAPPLICATIONTELEMETRYENABLED" Id="APPLICATIONTELEMETRYENABLED" Value="[APPLICATIONTELEMETRYENABLEDREMEMBER]" After="AppSearch" Sequence="first"><![CDATA[NOT APPLICATIONTELEMETRYENABLED]]></SetProperty>

    <!-- Undefine property if the value is <> '1', this is because an undefined property will result to an unchecked WiX CheckBox -->
    <SetProperty Action="UndefineDESKTOPSHORTCUTENABLED" Id="DESKTOPSHORTCUTENABLED" Value="{}" After="AppSearch" Sequence="first"><![CDATA[DESKTOPSHORTCUTENABLED AND DESKTOPSHORTCUTENABLED <> "1"]]></SetProperty>
    <SetProperty Action="UndefinePROGRAMMENUSHORTCUTENABLED" Id="PROGRAMMENUSHORTCUTENABLED" Value="{}" After="AppSearch" Sequence="first"><![CDATA[PROGRAMMENUSHORTCUTENABLED AND PROGRAMMENUSHORTCUTENABLED <> "1"]]></SetProperty>
    <SetProperty Action="UndefineINSTALLERTELEMETRYENABLED" Id="INSTALLERTELEMETRYENABLED" Value="{}" After="AppSearch" Sequence="first"><![CDATA[INSTALLERTELEMETRYENABLED AND INSTALLERTELEMETRYENABLED <> "1"]]></SetProperty>
    <SetProperty Action="UndefineAPPLICATIONTELEMETRYENABLED" Id="APPLICATIONTELEMETRYENABLED" Value="{}" After="AppSearch" Sequence="first"><![CDATA[APPLICATIONTELEMETRYENABLED AND APPLICATIONTELEMETRYENABLED <> "1"]]></SetProperty>

    <CustomAction Id="SetPropertyTelemetryUserId" BinaryKey="CustomActionBinary" DllEntry="SetPropertyTelemetryUserId" Execute="immediate" Impersonate="yes" />
    <CustomAction Id="SetPropertyValuesAfterInstall" Property="AfterInstall" Value="INSTALLSCOPE=$(var.InstallScope);PRODUCTNAME=$(var.AppName);PRODUCTVERSION=$(var.ProductVersion);PRODUCTBUILD=$(var.ProductBuild);INSTALLERTELEMETRYENABLED=[INSTALLERTELEMETRYENABLED];TELEMETRYUSERID=[TELEMETRYUSERID]" />
    <CustomAction Id="AfterInstall" BinaryKey="CustomActionBinary" DllEntry="AfterInstall" Execute="deferred" Impersonate="yes" />
    <CustomAction Id="SetPropertyValuesDeleteUserAppLocalFolder" Property="DeleteUserAppLocalFolder" Value="INSTALLSCOPE=$(var.InstallScope);PRODUCTNAME=$(var.AppName);PRODUCTVERSION=$(var.ProductVersion);PRODUCTBUILD=$(var.ProductBuild);INSTALLERTELEMETRYENABLED=[INSTALLERTELEMETRYENABLED];TELEMETRYUSERID=[TELEMETRYUSERID];LOCALAPPDATASUBFOLDER=$(var.AppInstallSubfolder)" />
    <CustomAction Id="DeleteUserAppLocalFolder" BinaryKey="CustomActionBinary" DllEntry="DeleteUserAppLocalFolder" Execute="deferred" Impersonate="yes" />
    <CustomAction Id="SetPropertyValuesAfterUninstall" Property="AfterUninstall" Value="INSTALLSCOPE=$(var.InstallScope);PRODUCTNAME=$(var.AppName);PRODUCTVERSION=$(var.ProductVersion);PRODUCTBUILD=$(var.ProductBuild);INSTALLERTELEMETRYENABLED=[INSTALLERTELEMETRYENABLED];TELEMETRYUSERID=[TELEMETRYUSERID]" />
    <CustomAction Id="AfterUninstall" BinaryKey="CustomActionBinary" DllEntry="AfterUninstall" Execute="deferred" Impersonate="yes" />
    <CustomAction Id="LaunchApplication" BinaryKey="WixCA" DllEntry="WixShellExec" />
    
    <InstallExecuteSequence>
      <Custom Action="SetPropertyTelemetryUserId" After="AppSearch" />
      <Custom Action="SetPropertyValuesAfterInstall" After="InstallFiles" />
      <Custom Action="AfterInstall" After="SetPropertyValuesAfterInstall"><![CDATA[NOT Installed AND NOT REMOVE]]></Custom>
      <Custom Action="SetPropertyValuesDeleteUserAppLocalFolder" After="RemoveFiles" />
      <Custom Action="DeleteUserAppLocalFolder" After="SetPropertyValuesDeleteUserAppLocalFolder"><![CDATA[(NOT UPGRADINGPRODUCTCODE) AND (REMOVE="ALL")]]></Custom>
      <Custom Action="SetPropertyValuesAfterUninstall" After="DeleteUserAppLocalFolder" />
      <Custom Action="AfterUninstall" After="SetPropertyValuesAfterUninstall"><![CDATA[(NOT UPGRADINGPRODUCTCODE) AND (REMOVE="ALL")]]></Custom>
    </InstallExecuteSequence>

  </Product>

  <Fragment>
    <Directory Id="TARGETDIR" Name="SourceDir">
      <Directory Id="ProgramFilesFolder">
        <Directory Id="AppManufacturer" Name="$(var.AppInstallFolder)">
          <Directory Id="INSTALLFOLDER" Name="$(var.AppInstallSubfolder)" />
        </Directory>
      </Directory>

      <Directory Id="DesktopFolder" Name="Desktop" />
      <Directory Id="ProgramMenuFolder" Name="ProgramMenu" />
    </Directory>
  </Fragment>

  <Fragment>
    <DirectoryRef Id="DesktopFolder">
      <Component Id="DesktopShortcut" Guid="{8C035041-08C9-44CB-B254-D66DA096C53D}" Win64="$(var.Win64)">
        <Condition><![CDATA[DESKTOPSHORTCUTENABLED = "1"]]></Condition>
        <Shortcut Id="DesktopShortcut" Directory="DesktopFolder" Name="$(var.ProductName)" WorkingDirectory="INSTALLFOLDER" Target="[INSTALLFOLDER]$(var.AppExecutableName)" />
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="desktopShortcutInstalled" Value="1" Type="integer" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="ProgramMenuFolder">
      <Component Id="ProgramMenuShortcut" Guid="{B6EB02B3-E16E-4661-89E4-A46C50815577}" Win64="$(var.Win64)">
        <Condition><![CDATA[PROGRAMMENUSHORTCUTENABLED = "1"]]></Condition>
        <Shortcut Id="ProgramMenuShortcut" Directory="ProgramMenuFolder" Name="$(var.ProductName)" WorkingDirectory="INSTALLFOLDER" Target="[INSTALLFOLDER]$(var.AppExecutableName)" />
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="programMenuShortcutInstalled" Value="1" Type="integer" KeyPath="yes" />
      </Component>
    </DirectoryRef>

    <DirectoryRef Id="INSTALLFOLDER">
      <Component Id="app.exe" Guid="{E880F50A-6C3B-4EB6-B639-752803CEF497}" Win64="$(var.Win64)">
        <File Id="app.exe" Name="$(var.AppExecutableName)" Source="$(var.PublishFolder)\$(var.AppExecutableName)" Checksum="yes" KeyPath="yes" />
        <RemoveFile Id="REMOVEALL" Directory="INSTALLFOLDER" Name="*.*" On="both" />
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="installFolder" Value="[INSTALLFOLDER]" Type="string" />
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="desktopShortcutEnabled" Value="[DESKTOPSHORTCUTENABLED]" Type="string" />
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="programMenuShortcutEnabled" Value="[PROGRAMMENUSHORTCUTENABLED]" Type="string" />
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="installerTelemetryEnabled" Value="[INSTALLERTELEMETRYENABLED]" Type="string" />
        <RegistryValue Root="HKCU" Key="Software\[Manufacturer]\$(var.AppName)" Name="applicationTelemetryEnabled" Value="[APPLICATIONTELEMETRYENABLED]" Type="string" />
      </Component>
    </DirectoryRef>
  </Fragment>

  <!-- https://github.com/wixtoolset/wix3/blob/develop/src/ext/UIExtension/wixlib/WixUI_InstallDir.wxs -->
  <Fragment>
    <UI Id="Custom_WixUI_InstallDir">
      <TextStyle Id="WixUI_Font_Normal" FaceName="Tahoma" Size="8" />
      <TextStyle Id="WixUI_Font_Bigger" FaceName="Tahoma" Size="12" />
      <TextStyle Id="WixUI_Font_Title" FaceName="Tahoma" Size="9" Bold="yes" />

      <Property Id="DefaultUIFont" Value="WixUI_Font_Normal" />
      <Property Id="WixUI_Mode" Value="InstallDir" />

      <DialogRef Id="BrowseDlg" />
      <DialogRef Id="DiskCostDlg" />
      <DialogRef Id="ErrorDlg" />
      <DialogRef Id="FatalError" />
      <DialogRef Id="FilesInUse" />
      <DialogRef Id="MsiRMFilesInUse" />
      <DialogRef Id="PrepareDlg" />
      <DialogRef Id="ProgressDlg" />
      <DialogRef Id="ResumeDlg" />
      <DialogRef Id="UserExit" />

      <Publish Dialog="BrowseDlg" Control="OK" Event="DoAction" Value="WixUIValidatePath" Order="3">1</Publish>
      <Publish Dialog="BrowseDlg" Control="OK" Event="SpawnDialog" Value="InvalidDirDlg" Order="4"><![CDATA[NOT WIXUI_DONTVALIDATEPATH AND WIXUI_INSTALLDIR_VALID<>"1"]]></Publish>

      <Publish Dialog="ExitDialog" Control="Finish" Event="EndDialog" Value="Return" Order="999">1</Publish>

      <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="LicenseAgreementDlg">NOT Installed</Publish>
      <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="Custom_VerifyReadyDlg">Installed AND PATCH</Publish>

      <Publish Dialog="LicenseAgreementDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg">1</Publish>
      <Publish Dialog="LicenseAgreementDlg" Control="Next" Event="NewDialog" Value="Custom_InstallDirDlg">LicenseAccepted = "1"</Publish>

      <Publish Dialog="Custom_InstallDirDlg" Control="Back" Event="NewDialog" Value="LicenseAgreementDlg">1</Publish>
      <Publish Dialog="Custom_InstallDirDlg" Control="Next" Event="SetTargetPath" Value="[WIXUI_INSTALLDIR]" Order="1">1</Publish>
      <Publish Dialog="Custom_InstallDirDlg" Control="Next" Event="DoAction" Value="WixUIValidatePath" Order="2">NOT WIXUI_DONTVALIDATEPATH</Publish>
      <Publish Dialog="Custom_InstallDirDlg" Control="Next" Event="SpawnDialog" Value="InvalidDirDlg" Order="3"><![CDATA[NOT WIXUI_DONTVALIDATEPATH AND WIXUI_INSTALLDIR_VALID<>"1"]]></Publish>
      <Publish Dialog="Custom_InstallDirDlg" Control="Next" Event="NewDialog" Value="Custom_VerifyReadyDlg" Order="4">WIXUI_DONTVALIDATEPATH OR WIXUI_INSTALLDIR_VALID="1"</Publish>
      <Publish Dialog="Custom_InstallDirDlg" Control="ChangeFolder" Property="_BrowseProperty" Value="[WIXUI_INSTALLDIR]" Order="1">1</Publish>
      <Publish Dialog="Custom_InstallDirDlg" Control="ChangeFolder" Event="SpawnDialog" Value="BrowseDlg" Order="2">1</Publish>

      <Publish Dialog="Custom_VerifyReadyDlg" Control="Back" Event="NewDialog" Value="Custom_InstallDirDlg" Order="1">NOT Installed</Publish>
      <Publish Dialog="Custom_VerifyReadyDlg" Control="Back" Event="NewDialog" Value="MaintenanceTypeDlg" Order="2">Installed AND NOT PATCH</Publish>
      <Publish Dialog="Custom_VerifyReadyDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2">Installed AND PATCH</Publish>

      <Publish Dialog="MaintenanceWelcomeDlg" Control="Next" Event="NewDialog" Value="MaintenanceTypeDlg">1</Publish>

      <Publish Dialog="MaintenanceTypeDlg" Control="RepairButton" Event="NewDialog" Value="Custom_VerifyReadyDlg">1</Publish>
      <Publish Dialog="MaintenanceTypeDlg" Control="RemoveButton" Event="NewDialog" Value="Custom_VerifyReadyDlg">1</Publish>
      <Publish Dialog="MaintenanceTypeDlg" Control="Back" Event="NewDialog" Value="MaintenanceWelcomeDlg">1</Publish>

      <Property Id="ARPNOMODIFY" Value="1" />
    </UI>

    <UIRef Id="WixUI_Common" />
  </Fragment>

  <Fragment>
    <UI>
      <!-- https://github.com/wixtoolset/wix3/blob/develop/src/ext/UIExtension/wixlib/InstallDirDlg.wxs -->
      
      <Dialog Id="Custom_InstallDirDlg" Width="370" Height="270" Title="!(loc.InstallDirDlg_Title)">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)" />
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.InstallDirDlgDescription)" />
        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="!(loc.InstallDirDlgTitle)" />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />
        
        <Control Id="Custom_DesktopShortcutCheckBox" Type="CheckBox" X="20" Y="160" Width="320" Height="18" Property="DESKTOPSHORTCUTENABLED" Text="!(loc.DesktopShortcutCheckBoxText)" CheckBoxValue="1" TabSkip="no" />
        <Control Id="Custom_ProgramMenuShortcutCheckBox" Type="CheckBox" X="20" Y="180" Width="320" Height="18" Property="PROGRAMMENUSHORTCUTENABLED" Text="!(loc.ProgramMenuShortcutCheckBoxText)" CheckBoxValue="1" TabSkip="no" />

        <Control Id="FolderLabel" Type="Text" X="20" Y="60" Width="290" Height="30" NoPrefix="yes" Text="!(loc.InstallDirDlgFolderLabel)" />
        <Control Id="Folder" Type="PathEdit" X="20" Y="100" Width="320" Height="18" Property="WIXUI_INSTALLDIR" Indirect="yes" />
        <Control Id="ChangeFolder" Type="PushButton" X="20" Y="120" Width="56" Height="17" Text="!(loc.InstallDirDlgChange)" />
      </Dialog>
    </UI>
  </Fragment>

  <Fragment>
    <UI>
      <!-- https://github.com/wixtoolset/wix3/blob/develop/src/ext/UIExtension/wixlib/VerifyReadyDlg.wxs -->
      
      <Dialog Id="Custom_VerifyReadyDlg" Width="370" Height="270" Title="!(loc.VerifyReadyDlg_Title)" TrackDiskSpace="yes">
        <Control Id="Install" Type="PushButton" ElevationShield="yes" X="212" Y="243" Width="80" Height="17" Default="yes" Hidden="yes" Disabled="yes" Text="!(loc.VerifyReadyDlgInstall)">
          <Condition Action="show">NOT Installed AND ALLUSERS</Condition>
          <Condition Action="enable">NOT Installed</Condition>
          <Condition Action="default">NOT Installed</Condition>
          <Publish Event="EndDialog" Value="Return"><![CDATA[OutOfDiskSpace <> 1]]></Publish>
          <Publish Event="SpawnDialog" Value="OutOfRbDiskDlg">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND (PROMPTROLLBACKCOST="P" OR NOT PROMPTROLLBACKCOST)</Publish>
          <Publish Event="EndDialog" Value="Return">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND PROMPTROLLBACKCOST="D"</Publish>
          <Publish Event="EnableRollback" Value="False">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND PROMPTROLLBACKCOST="D"</Publish>
          <Publish Event="SpawnDialog" Value="OutOfDiskDlg">(OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 1) OR (OutOfDiskSpace = 1 AND PROMPTROLLBACKCOST="F")</Publish>
        </Control>
        <Control Id="InstallNoShield" Type="PushButton" ElevationShield="no" X="212" Y="243" Width="80" Height="17" Default="yes" Hidden="yes" Disabled="yes" Text="!(loc.VerifyReadyDlgInstall)">
          <Condition Action="show">NOT Installed AND NOT ALLUSERS</Condition>
          <Condition Action="enable">NOT Installed</Condition>
          <Condition Action="default">NOT Installed</Condition>
          <Publish Event="EndDialog" Value="Return"><![CDATA[OutOfDiskSpace <> 1]]></Publish>
          <Publish Event="SpawnDialog" Value="OutOfRbDiskDlg">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND (PROMPTROLLBACKCOST="P" OR NOT PROMPTROLLBACKCOST)</Publish>
          <Publish Event="EndDialog" Value="Return">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND PROMPTROLLBACKCOST="D"</Publish>
          <Publish Event="EnableRollback" Value="False">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND PROMPTROLLBACKCOST="D"</Publish>
          <Publish Event="SpawnDialog" Value="OutOfDiskDlg">(OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 1) OR (OutOfDiskSpace = 1 AND PROMPTROLLBACKCOST="F")</Publish>
        </Control>
        <Control Id="Change" Type="PushButton" ElevationShield="yes" X="212" Y="243" Width="80" Height="17" Default="yes" Hidden="yes" Disabled="yes" Text="!(loc.VerifyReadyDlgChange)">
          <Condition Action="show">WixUI_InstallMode = "Change" AND ALLUSERS AND (ADDLOCAL OR REMOVE)</Condition>
          <Condition Action="enable">WixUI_InstallMode = "Change"</Condition>
          <Condition Action="default">WixUI_InstallMode = "Change"</Condition>
          <Publish Event="EndDialog" Value="Return"><![CDATA[OutOfDiskSpace <> 1]]></Publish>
          <Publish Event="SpawnDialog" Value="OutOfRbDiskDlg">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND (PROMPTROLLBACKCOST="P" OR NOT PROMPTROLLBACKCOST)</Publish>
          <Publish Event="EndDialog" Value="Return">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND PROMPTROLLBACKCOST="D"</Publish>
          <Publish Event="EnableRollback" Value="False">OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 0 AND PROMPTROLLBACKCOST="D"</Publish>
          <Publish Event="SpawnDialog" Value="OutOfDiskDlg">(OutOfDiskSpace = 1 AND OutOfNoRbDiskSpace = 1) OR (OutOfDiskSpace = 1 AND PROMPTROLLBACKCOST="F")</Publish>
        </Control>
